{% extends "base.html.j2" %}

{% block title %}{{ title }} - AWS Inventory{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">{{ title }}</h1>
            <div class="btn-group" role="group" aria-label="View selector">
                <a href="{{ url_for('dashboard', view='all') }}" 
                   class="btn btn-{{ 'primary' if current_view == 'all' else 'outline-primary' }}">
                    All Resources
                </a>
                <a href="{{ url_for('dashboard', view='compute') }}"
                   class="btn btn-{{ 'primary' if current_view == 'compute' else 'outline-primary' }}">
                    Compute
                </a>
                <a href="{{ url_for('dashboard', view='storage') }}"
                   class="btn btn-{{ 'primary' if current_view == 'storage' else 'outline-primary' }}">
                    Storage
                </a>
                <a href="{{ url_for('dashboard', view='network') }}"
                   class="btn btn-{{ 'primary' if current_view == 'network' else 'outline-primary' }}">
                    Network
                </a>
            </div>
        </div>
    </div>

    {% for service_name, items in resources.items() %}
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h2 class="h5 mb-0">{{ service_name }}</h2>
        </div>
        <div class="card-body">
            {% if items %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            {% for key in items[0].keys() %}
                            <th>{{ key }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                        <tr>
                            {% for value in item.values() %}
                            <td>{{ value }}</td>
                            {% endfor %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-muted mb-0">No resources found.</p>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add DataTables to all tables for better functionality
    const tables = document.querySelectorAll('.table');
    tables.forEach(table => {
        $(table).DataTable({
            pageLength: 10,
            order: [[0, 'asc']],
            responsive: true
        });
    });
});
</script>
{% endblock %} 