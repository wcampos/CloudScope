{% extends "base.html.j2" %}

{% block title %}AWS Profiles{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mb-4">AWS Profiles</h1>

    <!-- Profile Selection -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Active Profile</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ url_for('set_active_profile') }}" class="mb-3">
                <div class="row align-items-end">
                    <div class="col">
                        <label for="profile_id" class="form-label">Select Profile</label>
                        <select name="profile_id" id="profile_id" class="form-select">
                            <option value="">No Profile Selected</option>
                            {% for profile in profiles %}
                            <option value="{{ profile.id }}" {% if profile.is_active %}selected{% endif %}>
                                {{ profile.name }} ({{ profile.aws_region }})
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Set Active</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Add New Profile -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Add New Profile</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ url_for('add_profile') }}">
                <div class="mb-3">
                    <label for="name" class="form-label">Profile Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="aws_access_key_id" class="form-label">AWS Access Key ID</label>
                    <input type="text" class="form-control" id="aws_access_key_id" name="aws_access_key_id" required>
                </div>
                <div class="mb-3">
                    <label for="aws_secret_access_key" class="form-label">AWS Secret Access Key</label>
                    <input type="password" class="form-control" id="aws_secret_access_key" name="aws_secret_access_key" required>
                </div>
                <div class="mb-3">
                    <label for="aws_region" class="form-label">AWS Region</label>
                    <select class="form-select" id="aws_region" name="aws_region" required>
                        <option value="us-east-1">US East (N. Virginia)</option>
                        <option value="us-east-2">US East (Ohio)</option>
                        <option value="us-west-1">US West (N. California)</option>
                        <option value="us-west-2">US West (Oregon)</option>
                        <option value="eu-west-1">EU (Ireland)</option>
                        <option value="eu-central-1">EU (Frankfurt)</option>
                        <option value="ap-southeast-1">Asia Pacific (Singapore)</option>
                        <option value="ap-southeast-2">Asia Pacific (Sydney)</option>
                        <option value="ap-northeast-1">Asia Pacific (Tokyo)</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Role Configuration</label>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="role_type" id="role_none" value="none" checked>
                        <label class="form-check-label" for="role_none">
                            No Role (Use Direct Credentials)
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="role_type" id="role_existing" value="existing">
                        <label class="form-check-label" for="role_existing">
                            Use Existing Role
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="role_type" id="role_custom" value="custom">
                        <label class="form-check-label" for="role_custom">
                            Custom Role Configuration
                        </label>
                    </div>
                </div>
                <div class="mb-3" id="existing_role_div" style="display: none;">
                    <label for="role_name" class="form-label">Role Name</label>
                    <input type="text" class="form-control" id="role_name" name="role_name" placeholder="Enter the role name">
                    <div class="form-text">Enter the name of an existing IAM role in your account</div>
                </div>
                <div class="mb-3" id="custom_role_div" style="display: none;">
                    <label for="aws_session_token" class="form-label">Custom Role Configuration</label>
                    <textarea class="form-control" id="aws_session_token" name="aws_session_token" rows="5" placeholder='Enter JSON in this format:
{
    "RoleArn": "arn:aws:iam::ACCOUNT_ID:role/ROLE_NAME",
    "RoleSessionName": "aws_inventory_session"
}'></textarea>
                    <div class="form-text">
                        <p>This field can be used in two ways:</p>
                        <ol>
                            <li><strong>Direct Session Token:</strong> Enter your temporary session token if using temporary credentials (e.g., from AWS STS)</li>
                            <li><strong>Role Assumption:</strong> Enter JSON configuration to assume an IAM role. See <a href="/docs/aws_roles.md" target="_blank">documentation</a> for details.</li>
                        </ol>
                    </div>
                </div>
                <div class="mb-3" id="direct_token_div">
                    <label for="direct_session_token" class="form-label">AWS Session Token (Optional)</label>
                    <input type="text" class="form-control" id="direct_session_token" name="direct_session_token" placeholder="Enter your temporary session token if using temporary credentials">
                    <div class="form-text">Required only when using temporary credentials (e.g., from AWS STS)</div>
                </div>
                <button type="submit" class="btn btn-success">Add Profile</button>
            </form>
        </div>
    </div>

    <!-- Profile List -->
    {% if profiles %}
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Existing Profiles</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Region</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for profile in profiles %}
                        <tr>
                            <td>{{ profile.name }}</td>
                            <td>{{ profile.aws_region }}</td>
                            <td>
                                {% if profile.is_active %}
                                <span class="badge bg-success">Active</span>
                                {% else %}
                                <span class="badge bg-secondary">Inactive</span>
                                {% endif %}
                            </td>
                            <td>{{ profile.created_at.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                            <td>{{ profile.updated_at.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleTypeInputs = document.querySelectorAll('input[name="role_type"]');
    const existingRoleDiv = document.getElementById('existing_role_div');
    const customRoleDiv = document.getElementById('custom_role_div');
    const directTokenDiv = document.getElementById('direct_token_div');

    function updateRoleFields() {
        const selectedType = document.querySelector('input[name="role_type"]:checked').value;
        existingRoleDiv.style.display = selectedType === 'existing' ? 'block' : 'none';
        customRoleDiv.style.display = selectedType === 'custom' ? 'block' : 'none';
        directTokenDiv.style.display = selectedType === 'none' ? 'block' : 'none';
    }

    roleTypeInputs.forEach(input => {
        input.addEventListener('change', updateRoleFields);
    });

    // Initial state
    updateRoleFields();
});
</script>
{% endblock %} 