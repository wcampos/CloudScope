{% extends "base.html.j2" %}

{% block title %}AWS Profiles - AWS Inventory{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Add New Profile</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ url_for('add_profile') }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Profile Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="custom_name" class="form-label">Custom Name (Optional)</label>
                            <input type="text" class="form-control" id="custom_name" name="custom_name">
                            <div class="form-text">A friendly name to help identify this profile</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="aws_access_key_id" class="form-label">AWS Access Key ID</label>
                            <input type="text" class="form-control" id="aws_access_key_id" name="aws_access_key_id" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="aws_secret_access_key" class="form-label">AWS Secret Access Key</label>
                            <input type="password" class="form-control" id="aws_secret_access_key" name="aws_secret_access_key" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role Configuration</label>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="role_type" id="role_none" value="none" checked>
                                <label class="form-check-label" for="role_none">
                                    No Role (Use Direct Credentials)
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="role_type" id="role_existing" value="existing">
                                <label class="form-check-label" for="role_existing">
                                    Use Existing Role
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="role_type" id="role_custom" value="custom">
                                <label class="form-check-label" for="role_custom">
                                    Custom Role Configuration
                                </label>
                            </div>
                        </div>

                        <div id="direct_token_field" class="mb-3">
                            <label for="direct_session_token" class="form-label">AWS Session Token (Optional)</label>
                            <input type="text" class="form-control" id="direct_session_token" name="direct_session_token">
                            <div class="form-text">Enter a temporary session token if using direct credentials</div>
                        </div>

                        <div id="existing_role_field" class="mb-3" style="display: none;">
                            <label for="role_name" class="form-label">Role Name</label>
                            <input type="text" class="form-control" id="role_name" name="role_name">
                            <div class="form-text">Enter the name of an existing IAM role to assume</div>
                        </div>

                        <div id="custom_role_field" class="mb-3" style="display: none;">
                            <label for="aws_session_token" class="form-label">Role Configuration (JSON)</label>
                            <textarea class="form-control" id="aws_session_token" name="aws_session_token" rows="3"></textarea>
                            <div class="form-text">
                                Enter role configuration as JSON. Example:
                                <pre>{"RoleArn": "arn:aws:iam::123456789012:role/MyRole", "RoleSessionName": "aws_inventory_session"}</pre>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="aws_region" class="form-label">AWS Region</label>
                            <select class="form-select" id="aws_region" name="aws_region" required>
                                <option value="us-east-1">US East (N. Virginia)</option>
                                <option value="us-east-2">US East (Ohio)</option>
                                <option value="us-west-1">US West (N. California)</option>
                                <option value="us-west-2">US West (Oregon)</option>
                                <option value="eu-west-1">EU (Ireland)</option>
                                <option value="eu-central-1">EU (Frankfurt)</option>
                                <option value="ap-southeast-1">Asia Pacific (Singapore)</option>
                                <option value="ap-southeast-2">Asia Pacific (Sydney)</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Add Profile</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Paste AWS Credentials</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ url_for('parse_credentials') }}">
                        <div class="mb-3">
                            <label for="credentials_text" class="form-label">AWS Credentials</label>
                            <textarea class="form-control font-monospace" id="credentials_text" name="credentials_text" rows="6" required
                                      placeholder="[profile_name]
aws_access_key_id = AKIAXXXXXXXXXXXXXXXX
aws_secret_access_key = XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
region = us-east-1"></textarea>
                            <div class="form-text">
                                Paste your AWS credentials in the same format as they appear in ~/.aws/credentials file.
                                Make sure to include the profile name in square brackets.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Profile from Credentials</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Existing Profiles</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ url_for('set_active_profile') }}" id="setActiveForm">
                        {% for profile in profiles %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="profile_id" id="profile_{{ profile.id }}" value="{{ profile.id }}" {% if profile.is_active %}checked{% endif %}>
                                    <label class="form-check-label" for="profile_{{ profile.id }}">
                                        <strong>{{ profile.custom_name or profile.name }}</strong>
                                        <small class="text-muted">({{ profile.name }})</small>
                                    </label>
                                </div>
                                {% if profile.account_number %}
                                <div class="text-muted small">
                                    Account: {{ profile.account_number }}
                                </div>
                                {% endif %}
                                <div class="text-muted small">
                                    Region: {{ profile.aws_region }}
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="editProfile({{ profile.id }})">
                                        Edit
                                    </button>
                                    <form method="POST" action="{{ url_for('delete_profile', profile_id=profile.id) }}" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this profile?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Set Active Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm" method="POST">
                    <div class="mb-3">
                        <label for="edit_custom_name" class="form-label">Custom Name</label>
                        <input type="text" class="form-control" id="edit_custom_name" name="custom_name">
                    </div>
                    <div class="mb-3">
                        <label for="edit_aws_region" class="form-label">AWS Region</label>
                        <select class="form-select" id="edit_aws_region" name="aws_region">
                            <option value="us-east-1">US East (N. Virginia)</option>
                            <option value="us-east-2">US East (Ohio)</option>
                            <option value="us-west-1">US West (N. California)</option>
                            <option value="us-west-2">US West (Oregon)</option>
                            <option value="eu-west-1">EU (Ireland)</option>
                            <option value="eu-central-1">EU (Frankfurt)</option>
                            <option value="ap-southeast-1">Asia Pacific (Singapore)</option>
                            <option value="ap-southeast-2">Asia Pacific (Sydney)</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editProfileForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, setting up form handler');
    const setActiveForm = document.getElementById('setActiveForm');
    console.log('Form element found:', setActiveForm);
    
    if (setActiveForm) {
        setActiveForm.addEventListener('submit', function(event) {
            console.log('Form submit event triggered');
            const selectedProfile = document.querySelector('input[name="profile_id"]:checked');
            console.log('Selected profile element:', selectedProfile);
            
            if (!selectedProfile) {
                console.log('No profile selected, showing alert');
                event.preventDefault();
                alert('Please select a profile first');
                return false;
            }
            
            console.log('Submitting form with profile:', selectedProfile.value);
            return true;
        });
    } else {
        console.error('Could not find form element with id "setActiveForm"');
    }

    const roleTypeInputs = document.querySelectorAll('input[name="role_type"]');
    const directTokenField = document.getElementById('direct_token_field');
    const existingRoleField = document.getElementById('existing_role_field');
    const customRoleField = document.getElementById('custom_role_field');

    function updateFields() {
        const selectedType = document.querySelector('input[name="role_type"]:checked').value;
        
        directTokenField.style.display = selectedType === 'none' ? 'block' : 'none';
        existingRoleField.style.display = selectedType === 'existing' ? 'block' : 'none';
        customRoleField.style.display = selectedType === 'custom' ? 'block' : 'none';
    }

    roleTypeInputs.forEach(input => {
        input.addEventListener('change', updateFields);
    });

    // Initial state
    updateFields();

    // Profile edit functionality
    window.editProfile = function(profileId) {
        const modal = new bootstrap.Modal(document.getElementById('editProfileModal'));
        const form = document.getElementById('editProfileForm');
        form.action = `/profiles/${profileId}/edit`;
        
        // Fetch profile data and populate form
        fetch(`/profiles/${profileId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('edit_custom_name').value = data.custom_name || '';
                document.getElementById('edit_aws_region').value = data.aws_region;
                modal.show();
            })
            .catch(error => {
                console.error('Error fetching profile:', error);
                alert('Error loading profile data');
            });
    };
});
</script>
{% endblock %} 